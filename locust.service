[Unit]
Description=Locust load test service
After=multi-user.target
Conflicts=getty@tty1.service

[Service]
Type=simple
ExecStart=/usr/bin/locust --host=http://<your-hostname>.apigee.net/v1/ --no-web -c 2 -r 2 -f /<location_of_your_script>/locust-load.py
StandardInput=tty-force

[Install]
WantedBy=multi-user.target